@model Pet

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <div class="col-lg-8  justify-content-center">
        <h1>Details</h1>
    </div>
    <div class="row justify-content-center m-1 mt-lg-2">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center">@Model.Name</h1>
                </div>

                <div class="card-body text-center">
                    <h4>@Model.DOB</h4>
                    <h4>@Model.Gender</h4>
                    <h4>@Model.Description</h4>
                    <h4>@Model.PetColor.Color</h4>
                    <h4>@Model.PetKind.AnimalType</h4>
                    <h4>@Model.Shelter.Name</h4>
                    <h4>@Model.Shelter.Description</h4>

                </div>
                <div class="row">
                    <div class="col-md-4">
                        @foreach (var picture in Model.PetPictures)
                        {
                            var imagepath = "~/images/" + picture.PhotoPath;

                            <div class="thumbnail">
                                <img class="imageThumbnail" src="@imagepath" asp-append-version="true" />
                            </div>

                        }
                    </div>

                </div>
            </div>

        </div>
    </div>

    <form asp-action="DeleteSure" asp-controller="Pet">
        <input hidden asp-for="@Model.PetId" />
        <button class="btn btn-danger">
            Are you sure you want to delete ?
        </button>
    </form>

</div>
