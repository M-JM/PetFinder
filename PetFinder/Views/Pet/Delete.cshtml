@model Pet

@{
    ViewData["Title"] = "Delete";
}

<link href="~/fotorama/fotorama.css" rel="stylesheet" />
<link href="~/bootstrap-datepicker/css/bootstrap-datepicker.standalone.min.css" rel="stylesheet" />
<link href="~/js/jquery.timepicker.min.css" rel="stylesheet" />

<header class="page-header page-header-dark bg-gradient-primary-to-secondary pt-15">
    <div class="page-header-content pt-1">
        <div class="container text-center">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <h1 class="page-header-title mb-3"> Are you sure you want to delete @Model.Name</h1>

                </div>
            </div>
        </div>
    </div>
    <div class="svg-border-rounded text-lavender">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 144.54 17.34" preserveAspectRatio="none" fill="currentColor"><path d="M144.54,17.34H0V0H144.54ZM0,0S32.36,17.34,72.27,17.34,144.54,0,144.54,0"></path></svg>
    </div>
</header>


<div class="div mt-5 pl-0 pr-0 centerdiv" style="background-color:LavenderBlush">

    
    <div class="col-md-12 centerdiv">
        <div class="row">
            <div class="col-md-7">
                <div class="fotorama"
                     data-width="500"
                     data-height="300"
                     data-nav="thumbs"
                     data-thumbwidth="120"
                     data-thumbheight="120"
                     data-fit="cover">

                    @if (Model.PetPictures.Count > 0)
                    {
                        foreach (var picture in Model.PetPictures)
                        {

                            var imagepath = "~/images/" + picture.PhotoPath;

                            <img src="@imagepath" asp-append-version="true" />

                        }
                    }
                    else
                    {

                        <img src="~/images/noimage.jpg" asp-append-version="true" />

                    }


                </div>
            </div>
            <div class="col-md-5">
                <div class="row">
                    <div class="col-md-12 mt-2 mb-2">
                        <h2>
                            My Details
                        </h2>
                    </div>
                </div>

                <table cellspacing="0" cellpadding="0">
                    <tr>
                        <td>Age:&nbsp;</td>
                        <td>@Model.DOB</td>
                    </tr>
                    <tr>
                        <td>Sex:&nbsp;</td>
                        <td> @Model.Gender</td>
                    </tr>
                    <tr>
                        <td>Breed:&nbsp;</td>
                        <td>@Model.PetRace.RaceName</td>
                    </tr>
                    <tr>
                        <td>Color:&nbsp;</td>
                        <td>@Model.PetColor.Color</td>
                    </tr>
                    <tr>
                        <td>Size:&nbsp;</td>
                        <td>@Model.Size</td>
                    </tr>

                </table>

                <div class="row">
                    <div class="col-md-12 mt-3 mb-2">
                        <h2>
                            My Info
                        </h2>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 mt-1 mb-1">


                        @if (@Model.SocialWithCats.Value == Tristate.No)
                        {
                            <img src="~/assets/close.png" /> }
                        else if (@Model.SocialWithCats.Value == Tristate.Yes)
                        {<img src="~/assets/tick.png" />
                        }
                        else if (@Model.SocialWithCats.Value == Tristate.Unknown)
                        {
                            <img src="~/assets/question.png" />
                        }
                        Can live with cats

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 mt-1 mb-1">
                        @if (@Model.SocialWithDogs.Value == Tristate.No)
                        {
                            <img src="~/assets/close.png" /> }
                        else if (@Model.SocialWithDogs.Value == Tristate.Yes)
                        {<img src="~/assets/tick.png" />
                        }
                        else if (@Model.SocialWithDogs.Value == Tristate.Unknown)
                        {
                            <img src="~/assets/question.png" />
                        }
                        Can Live with dogs
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 mt-1 mb-1">

                        @if (@Model.Appartmentfit.Value == Tristate.No)
                        {
                            <img src="~/assets/close.png" /> }
                        else if (@Model.Appartmentfit.Value == Tristate.Yes)
                        {<img src="~/assets/tick.png" />
                        }
                        else if (@Model.Appartmentfit.Value == Tristate.Unknown)
                        {
                            <img src="~/assets/question.png" />
                        }
                        Is fit for an appatrment
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 mt-1 mb-1">

                        @if (@Model.KidsFriendly.Value == Tristate.No)
                        {
                            <img src="~/assets/close.png" /> }
                        else if (@Model.KidsFriendly.Value == Tristate.Yes)
                        {<img src="~/assets/tick.png" />
                        }
                        else if (@Model.KidsFriendly.Value == Tristate.Unknown)
                        {
                            <img src="~/assets/question.png" />
                        }
                        Is friendly with kids

                    </div>
                </div>
            </div>
        </div>


        <div class="col-md-12 mt-2">

            <h2>
                About Myself
            </h2>

            <div>
                <p>
                    @Html.Raw(Model.Description)

                </p>
            </div>
        </div>



    </div>

    <div class="col-md-12 centerdiv text align-items-center justify-content-center" style="text-align:center">

        <a asp-action="PetList" asp-controller="Pet" class="btn btn-info">Back</a>
        <a asp-action="DeleteSure" asp-controller="Pet" asp-route-id="@Model.PetId" class="btn btn-danger">Delete</a>

    </div>

  
</div>


