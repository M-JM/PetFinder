@model FavoriteListViewModel

@{
    ViewBag.Title = "Favorite List";
}
<header class="page-header page-header-dark bg-gradient-primary-to-secondary pt-10">
    <div class="page-header-content pt-5">
        <div class="container text-center">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <h1 class="page-header-title mb-3">Your Favorites Pet</h1>

                </div>
            </div>
        </div>
    </div>
    <div class="svg-border-rounded text-white">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 144.54 17.34" preserveAspectRatio="none" fill="currentColor"><path d="M144.54,17.34H0V0H144.54ZM0,0S32.36,17.34,72.27,17.34,144.54,0,144.54,0"></path></svg>
    </div>
</header>

<div class="container mt-1">
    <div class="col-lg-12 align-content-center">
        <div class="row result">
            @foreach (var pet in Model.FavoriteLists)
            {
                <div class="col-md-6 col-xl-3 mb-5 mt-5">
                    <a class="card post-preview lift h-100" href="/Pet/Details/@pet.PetId">
                        <img class="card-img-top" src="~/images/@pet.Pet.PetPictures.FirstOrDefault().PhotoPath">
                        <div class="card-body">
                            <h5 class="card-title">@pet.Pet.Name</h5>
                            <p class="card-text">
                            </p>
                        </div>
                        <div class="card-footer">
                            <div class="post-preview-meta">
                                <div class="post-preview-meta-details">
                                    <div class="post-preview-meta-details-name">
                                        @pet.Pet.Shelter.Name
                                    </div>
                                    <div class="post-preview-meta-details-name">
                                        <div class="row">
                                            <div class="col-3"><i>
    <img src="~/assets/phone-call.png" />
</i></div>
                                            <div class="col-9" style="text-align: center;
vertical-align: middle;">@pet.Pet.Shelter.PhoneNumber</div>
                                        
                                        </div>
                                        <div class="row">
                                            <i><img src="~/assets/mail.png" />
                                            </i>@pet.Pet.Shelter.Email
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>